<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!--======== CONFIGURATION VIEW ========-->
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.sale</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="10"/>
    <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <!--Echange et modifications des conditions de paiement et des notes.-->
      <xpath expr="//div[@name='quotation_order_setting_container']" position="after">
        <h2>Sale Portal Content</h2>
        <div class="row mt16 o_settings_container" name="portal_setting_container">
          <div class="o_setting_right_pane">
            <label for="sign_and_accept_customized"/>
            <div class="mt8">
              <field name="sign_and_accept_customized"/>
            </div>
            <label class="mt16" for="review_sign_and_accept_customized"/>
            <div class="mt8">
              <field name="review_sign_and_accept_customized"/>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>